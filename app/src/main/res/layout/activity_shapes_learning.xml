<!-- activity_shapes_learning.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/shapesbg"
    >

    <TextView
        android:id="@+id/shape_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What shape is this?"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/shape_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:contentDescription="Shape Image"
        android:layout_below="@+id/shape_question_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

        <Button
            android:id="@+id/option1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_below="@+id/shape_image"
            android:text="Option 1"/>

        <Button
            android:id="@+id/option2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/shape_image"
            android:text="Option 2"/>

        <Button
            android:id="@+id/option3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/shape_image"
            android:text="Option 3"/>

</RelativeLayout>
